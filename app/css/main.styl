@import url('https://fonts.googleapis.com/css?family=Space+Mono');

html
	height 100%
	padding 0
	margin 0


body
	font-family -apple-system, BlinkMacSystemFont, sans-serif
	font-size 10px
	background #000000
	width 100%
	height 100%
	margin 0
	padding 0
	overflow hidden
	#main
		position fixed
		width 960px
		height 960px
		top 50%
		left 50%
		margin-left -480px
		margin-top -480px
		#data
			position absolute
			top 50%
			left 50%
			margin-top -100px
			margin-left 100px
			color #ffffff
			font-family 'Space Mono', monospace
			line-height 12px